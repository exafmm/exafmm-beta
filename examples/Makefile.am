include ../Makefile.am.include

bin_PROGRAMS = laplace_cartesian laplace_spherical helmholtz_spherical helmholtz_drr_spherical biotsavart_spherical tree
laplace_cartesian_SOURCES = fmm.cxx
laplace_cartesian_CPPFLAGS = $(AM_CPPFLAGS) -DEXAFMM_LAPLACE -DEXAFMM_CARTESIAN -DEXAFMM_MASS -DEXAFMM_EXPANSION=4
laplace_spherical_SOURCES = fmm.cxx
laplace_spherical_CPPFLAGS = $(AM_CPPFLAGS) -DEXAFMM_LAPLACE -DEXAFMM_SPHERICAL -DEXAFMM_EXPANSION=10
helmholtz_spherical_SOURCES = fmm.cxx
helmholtz_spherical_CPPFLAGS = $(AM_CPPFLAGS) -DEXAFMM_HELMHOLTZ -DEXAFMM_SPHERICAL -DEXAFMM_EXPANSION=10
helmholtz_drr_spherical_SOURCES = fmm.cxx
helmholtz_drr_spherical_CPPFLAGS = $(AM_CPPFLAGS) -DEXAFMM_HELMHOLTZ -DEXAFMM_SPHERICAL -DEXAFMM_EXPANSION=10 -DDRR
biotsavart_spherical_SOURCES = fmm.cxx
biotsavart_spherical_CPPFLAGS = $(AM_CPPFLAGS) -DEXAFMM_BIOTSAVART -DEXAFMM_SPHERICAL -DEXAFMM_EXPANSION=10
tree_SOURCES = tree.cxx
tree_CPPFLAGS = $(laplace_cartesian_CPPFLAGS)

run_laplace_cartesian: laplace_cartesian
	./$< -Dgmovx
run_laplace_spherical: laplace_spherical
	./$< -Dgmovx
run_helmholtz_spherical: helmholtz_spherical
	./$< -Dgv -n 40000
run_helmholtz_drr_spherical: helmholtz_drr_spherical
	./$< -Dgv -n 40000
run_biotsavart_spherical: biotsavart_spherical
	./$< -Dgv -n 40000
run_tree: tree
	./$< -v -n 10000000

bin_PROGRAMS += laplace_cartesian_kernel laplace_spherical_kernel helmholtz_spherical_kernel helmholtz_drr_spherical_kernel biotsavart_spherical_kernel
laplace_cartesian_kernel_SOURCES = kernel.cxx
laplace_cartesian_kernel_CPPFLAGS = $(laplace_cartesian_CPPFLAGS)
laplace_spherical_kernel_SOURCES = kernel.cxx
laplace_spherical_kernel_CPPFLAGS = $(laplace_spherical_CPPFLAGS)
helmholtz_spherical_kernel_SOURCES = kernel.cxx
helmholtz_spherical_kernel_CPPFLAGS = $(helmholtz_spherical_CPPFLAGS)
helmholtz_drr_spherical_kernel_SOURCES = kernel.cxx
helmholtz_drr_spherical_kernel_CPPFLAGS = $(helmholtz_drr_spherical_CPPFLAGS)
biotsavart_spherical_kernel_SOURCES = kernel.cxx
biotsavart_spherical_kernel_CPPFLAGS = $(biotsavart_spherical_CPPFLAGS)

run_laplace_cartesian_kernel: laplace_cartesian_kernel
	./$< -v
run_laplace_spherical_kernel: laplace_spherical_kernel
	./$< -v
run_helmholtz_spherical_kernel: helmholtz_spherical_kernel
	./$< -v
run_helmholtz_drr_spherical_kernel: helmholtz_drr_spherical_kernel
	./$< -v
run_biotsavart_spherical_kernel: biotsavart_spherical_kernel
	./$< -v

if EXAFMM_HAVE_MPI
bin_PROGRAMS += laplace_cartesian_mpi laplace_spherical_mpi helmholtz_spherical_mpi helmholtz_drr_spherical_mpi biotsavart_spherical_mpi ewald_mpi
laplace_cartesian_mpi_SOURCES = fmm_mpi.cxx
laplace_cartesian_mpi_CPPFLAGS = $(laplace_cartesian_CPPFLAGS)
laplace_spherical_mpi_SOURCES = fmm_mpi.cxx
laplace_spherical_mpi_CPPFLAGS = $(laplace_spherical_CPPFLAGS)
helmholtz_spherical_mpi_SOURCES = fmm_mpi.cxx
helmholtz_spherical_mpi_CPPFLAGS = $(helmholtz_spherical_CPPFLAGS)
helmholtz_drr_spherical_mpi_SOURCES = fmm_mpi.cxx
helmholtz_drr_spherical_mpi_CPPFLAGS = $(helmholtz_spherical_CPPFLAGS)
biotsavart_spherical_mpi_SOURCES = fmm_mpi.cxx
biotsavart_spherical_mpi_CPPFLAGS = $(biotsavart_spherical_CPPFLAGS)
ewald_mpi_SOURCES = ewald.cxx
ewald_mpi_CPPFLAGS = $(laplace_spherical_CPPFLAGS)

run_laplace_cartesian_mpi: laplace_cartesian_mpi
	$(MPIRUN) -n 2 ./$< -Dgmovx
